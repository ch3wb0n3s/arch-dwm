pkgname=dwmblocks-git
pkgver=0
pkgrel=1
pkgdesc="Status bar for dwm"
arch=(x86_64 aarch64)
url="https://github.com/torrinfail/dwmblocks"
license=(MIT)
depends=(libx11)
makedepends=(git)
source=("git+$url.git")
sha256sums=('SKIP')

pkgver() { cd "$srcdir/dwmblocks"; git describe --tags --always | sed 's/^v//; s/-/./g'; }
prepare() { cd "$srcdir/dwmblocks"; cp -n blocks.def.h blocks.h; }
build() { cd "$srcdir/dwmblocks"; make; }
package() { cd "$srcdir/dwmblocks"; make PREFIX=/usr DESTDIR="$pkgdir" install; }